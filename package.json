{
    "name": "create-phaser-app",
    "version": "0.0.16",
    "description": "A boiler plate to start your phaser app with webpack4, babel7+ and Phaser 3",
    "author": "Jesse Harlin",
    "homepage": "https://github.com/simiancraft/create-phaser-app",
    "scripts": {
        "start": "webpack-dev-server --mode development --env.development",
        "build": "webpack --mode production --env.production",
        "deploy": "yarn build --env.ghpages && yarn gh-pages && rm -rf ./gh-pages",
        "lint": "eslint ./src/**/**.js",
        "complexity-report": "./node_modules/.bin/es6-plato -r -d ./report src",
        "gh-pages": "gh-pages -d gh-pages",
        "test_base": "jest src/",
        "test": "yarn test_base",
        "coverage": "yarn test_base --coverage",
        "pretty": "npx eslint --fix \"src/**/*.js\"",
        "precommit": "yarn pretty",
        "process-levels": "node ./level-processor/index.js"
    },
    "keywords": [
        "Phaser",
        "Phaser 3",
        "webpack",
        "webpack 4",
        "game development",
        "boilerplate",
        "scaffold",
        "prettier",
        "game jam"
    ],
    "license": "MIT",
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [
            [
                "@babel/plugin-proposal-decorators",
                {
                    "legacy": true
                }
            ],
            "@babel/plugin-proposal-class-properties"
        ]
    },
    "importSort": {
        ".js, .jsx, .es6, .es": {
            "parser": "babylon",
            "style": "module"
        },
        ".ts, .tsx": {
            "parser": "typescript",
            "style": "module"
        }
    },
    "dependencies": {
        "lodash": "^4.17.10",
        "machina": "^4.0.2",
        "phaser": "3.15.1",
        "phaser-animated-tiles": "2.0.2"
    },
    "devDependencies": {
        "@babel/core": "7.1.6",
        "@babel/plugin-proposal-class-properties": "7.1.0",
        "@babel/plugin-proposal-decorators": "7.1.6",
        "@babel/preset-env": "7.1.6",
        "@babel/preset-react": "7.0.0",
        "@babel/runtime": "7.1.5",
        "add": "2.0.6",
        "babel-eslint": "10.0.1",
        "babel-jest": "^23.0.1",
        "babel-loader": "8.0.4",
        "babel-plugin-lodash": "^3.3.4",
        "browser-sync": "2.26.3",
        "browser-sync-webpack-plugin": "2.2.2",
        "bs-eslint-message": "0.0.3",
        "chalk": "^2.4.1",
        "clean-webpack-plugin": "1.0.0",
        "copy-webpack-plugin": "4.6.0",
        "css-loader": "1.0.1",
        "es6-plato": "1.0.18",
        "eslint": "5.9.0",
        "eslint-plugin-import": "2.14.0",
        "eslint-plugin-prettier": "3.0.0",
        "eslint-plugin-react": "7.11.1",
        "esm": "^3.0.84",
        "expose-loader": "0.7.5",
        "file-loader": "2.0.0",
        "gh-pages": "2.0.1",
        "globby": "^8.0.1",
        "html-webpack-plugin": "3.2.0",
        "husky": "^1.1.4",
        "import-sort-style-module": "5.0.0",
        "jest": "^23.1.0",
        "json-loader": "0.5.7",
        "lodash-webpack-plugin": "^0.11.5",
        "polybooljs": "^1.2.0",
        "prettier": "1.15.2",
        "prettier-check": "^2.0.0",
        "prettier-eslint": "8.8.2",
        "raw-loader": "0.5.1",
        "regenerator-runtime": "^0.12.1",
        "style-loader": "0.23.1",
        "tile-extruder": "^1.1.0",
        "url-loader": "1.1.2",
        "webpack": "4.25.1",
        "webpack-bundle-analyzer": "3.0.3",
        "webpack-cli": "3.1.2",
        "webpack-dev-server": "3.1.10",
        "yarn": "1.12.3"
    }
}
