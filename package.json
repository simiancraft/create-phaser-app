{
    "name": "create-phaser-app",
    "version": "0.0.8",
    "description": "A boiler plate to start your phaser app with webpack4, babel7+ and Phaser 3",
    "author": "Jesse Harlin",
    "homepage": "https://github.com/simiancraft/create-phaser-app",
    "scripts": {
        "start": "webpack-dev-server --mode development --env.development",
        "build": "webpack --mode production --env.production",
        "deploy": "yarn build --env.ghpages && yarn gh-pages && rm -rf ./gh-pages",
        "test": "eslint ./src/**/**.js",
        "complexity-report": "./node_modules/.bin/es6-plato -r -d ./report src",
        "gh-pages": "gh-pages -d gh-pages",
        "format": "prettier --write \"src/**/*.js\"",
        "precommit": "lint-staged && yarn test"
    },
    "keywords": [
        "Phaser",
        "Phaser 3",
        "webpack",
        "webpack 4",
        "game development",
        "boilerplate",
        "scaffold",
        "prettier",
        "game jam"
    ],
    "license": "MIT",
    "dependencies": {
        "@babel/core": "7.0.0-beta.51",
        "@babel/plugin-proposal-class-properties": "7.0.0-beta.51",
        "@babel/plugin-proposal-decorators": "7.0.0-beta.51",
        "@babel/preset-env": "7.0.0-beta.51",
        "@babel/preset-react": "7.0.0-beta.51",
        "@babel/runtime": "7.0.0-beta.51",
        "add": "2.0.6",
        "babel-eslint": "8.2.3",
        "babel-loader": "8.0.0-beta.0",
        "browser-sync": "2.24.4",
        "browser-sync-webpack-plugin": "2.2.2",
        "bs-eslint-message": "0.0.3",
        "chalk": "2.4.1",
        "clean-webpack-plugin": "0.1.19",
        "copy-webpack-plugin": "4.5.1",
        "css-loader": "0.28.11",
        "es6-plato": "1.0.18",
        "eslint": "4.19.1",
        "eslint-plugin-import": "2.12.0",
        "eslint-plugin-prettier": "2.6.0",
        "eslint-plugin-react": "7.9.1",
        "expose-loader": "0.7.5",
        "file-loader": "1.1.11",
        "gh-pages": "1.2.0",
        "html-webpack-plugin": "3.2.0",
        "husky": "^0.14.3",
        "import-sort-style-module": "4.2.0",
        "json-loader": "0.5.7",
        "lint-staged": "^7.2.0",
        "phaser": "3.10.1",
        "phaser-animated-tiles": "2.0.2",
        "prettier": "^1.13.5",
        "prettier-eslint": "8.8.1",
        "raw-loader": "0.5.1",
        "style-loader": "0.21.0",
        "url-loader": "1.0.1",
        "webpack": "4.12.0",
        "webpack-bundle-analyzer": "2.13.1",
        "webpack-cli": "3.0.4",
        "webpack-dev-server": "3.1.4",
        "yarn": "1.7.0"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [
            [
                "@babel/plugin-proposal-decorators",
                {
                    "legacy": true
                }
            ],
            "@babel/plugin-proposal-class-properties"
        ]
    },
    "importSort": {
        ".js, .jsx, .es6, .es": {
            "parser": "babylon",
            "style": "module"
        },
        ".ts, .tsx": {
            "parser": "typescript",
            "style": "module"
        }
    },
    "lint-staged": {
        "*.js": [
            "yarn format",
            "git add"
        ]
    }
}
